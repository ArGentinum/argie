#include <stdio.h>
void main(){
    int a,b,c,d,e;
    printf("enter the number: ");
    scanf("%d",&a);
    d=1;
    //for loops for printing a triangle
    for(b=1;b<=a;++b){
        e=b;
        while(e<a){
            printf(" ");
            ++e;
        }
        
        for(c=0;c<d;++c){
            printf("*");
        }
        d+=2;
        printf("\n");
        
    }
    d-=2;
    
    //for loops for printing an inverted triangle
    int f=0;
    for(b=1;b<=a;++b){
        for(e=0;e<f;++e){
            printf(" ");
            
        }
        for(c=0;c<d;++c){
            printf("*");
        }
       
        printf("\n");
        ++f;
        d-=2;
    }
}


#include <stdio.h>
void main(){
    int a,b,c,d,e;
    char alp='a';
    printf("enter the number: ");
    scanf("%d",&a);
    d=1;
    //for loops for printing a triangle
    for(b=1;b<=a;++b){
        e=b;
        while(e<a){
            printf(" ");
            ++e;
        }
        
        for(c=0,alp='a';c<d;++c){
            printf(" %c",alp);
            ++alp;
        }
        d+=2;
        printf("\n");
        
    }
    d-=2;
    
    //for loops for printing an inverted triangle
    int f=0;
    for(b=1;b<=a;++b){
        for(e=0;e<f;++e){
            printf(" ");
            
        }
        for(c=0;c<d;++c){
            
            printf(" %d",c);
        }
       
        printf("\n");
        ++f;
        d-=2;
    }
}
